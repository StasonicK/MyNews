<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewsList">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- News List screen style -->
    <style name="NewsArticleItem" />

    <style name="NewsArticleItem.View">
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="NewsArticleItem.Author">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewsArticleItem.Title">
        <item name="android:maxLines">3</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textview_size_normal</item>
    </style>

    <style name="NewsArticleItem.PublishedAt">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textview_size_small</item>
    </style>
    <!--endregion-->

    <!-- Detailed News Screen style -->
    <style name="NewsArticleDetailed" />

    <style name="NewsArticleDetailed.View">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="NewsArticleDetailed.Image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/image_placeholder</item>
    </style>

    <style name="NewsArticleDetailed.Author">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewsArticleDetailed.Title">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="NewsArticleDetailed.PublishedAt">
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!--endregion-->

</resources>